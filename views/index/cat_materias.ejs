	}
	
	.card .additional .stats div.title {
	  font-size: 0.75rem;
	  font-weight: bold;
	  text-transform: uppercase;
	}
	
	.card .additional .stats div.value {
	  font-size: 1.5rem;
	  font-weight: bold;
